grant {
    // permission to bind a ServerSocketChannel in sockets directory
    permission java.io.FilePermission "${user.dir}${file.separator}sockets", "write";

    // permission to accept from unnamed socket
    permission java.io.FilePermission "", "read,write";

    // permission to connect a SocketChannel to sock1
    permission java.io.FilePermission "${user.dir}${file.separator}sockets${file.separator}sock1", "read,write";

    // no permission to connect to sock2
};
